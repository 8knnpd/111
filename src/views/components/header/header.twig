{% set important_links = theme.settings.get('important_links') %}
<header class="store-header modern-digital-header">
  {# Top Nav #}
  <div class="top-navbar bg-gradient-to-r from-digital-primary via-digital-secondary to-digital-accent backdrop-blur-md">
    <div class="container flex justify-between">
      <div class="flex-1 flex items-center gap-3">
          {# Footer Menu #}
          {% if important_links %}
            <salla-menu source="footer" topnav></salla-menu>
          {% endif %}

          {# Language & Currency Component #}
          <div class="header-buttons">
              {% if store.settings.is_multilingual or store.settings.currencies_enabled %}
                  <button type="button" onclick="salla.event.dispatch('localization::open')" class="btn--rounded-gray basis-0">
                      <span class="flag iti__flag iti__{{ user.language.country_code }} rounded-sm"></span>
                      <span class="mx-1.5">|</span> <span>{{ currency.symbol }}</span>
                  </button>
                  <salla-localization-modal></salla-localization-modal>
              {% endif %}
          </div>

          {# Scopes | Branches #}
          {% if store.scope %}
              <button class="btn--rounded-gray"
                      onclick="salla.event.dispatch('scopes::open', {'mode': 'default'})">
                  <i class="sicon-location rtl:ml-1 ltr:mr-1"></i> {{ store.scope.name }}
              </button>
          {% endif %}

          {# Search bar #}
          <div class="header-search flex-1">
            <salla-search inline oval height="36"></salla-search>
          </div>
      </div>

      <salla-contacts is-header></salla-contacts>
    </div>
  </div>

  {# Main Nav #}
  <div id="mainnav" class="main-nav-container shadow-glass bg-white/80 backdrop-blur-xl border-b border-digital-primary/10">
      <div class="inner bg-inherit">
          <div class="container">
              <div class="flex items-stretch justify-between relative py-2">
                  <div class="flex items-center gap-6">
                      <a class="lg:hidden mburger mburger--collapse leading-none rtl:ml-4 ltr:mr-4 p-2 rounded-lg hover:bg-digital-primary/10 transition-all duration-300" href="#mobile-menu" aria-label="Open-menu">
                        <i class="sicon-menu text-digital-primary text-2xl"></i>
                      </a>
                      <a class="navbar-brand transform hover:scale-105 transition-transform duration-300" href="{{ store.url }}">
                          <img fetchpriority="high" width="100%" height="100%" loading="eager" src="{{ store.logo }}" alt="{{ store.name }} logo" class="drop-shadow-lg">
                          {% if is_page('index') %}
                            <h1 class="sr-only">{{ store.name }}</h1>
                          {% else %}
                            <h2 class="sr-only">{{ store.name }}</h2>
                          {% endif %}
                      </a>
                      <custom-main-menu class="digital-menu"></custom-main-menu>
                  </div>
                  <div class="flex items-center justify-end gap-3">
                      {% if user.type=='user' %}
                        <salla-user-menu avatar-only show-header class="hover:shadow-glow transition-all duration-300"></salla-user-menu>
                      {% else %}
                          <button class="header-btn group relative overflow-hidden rounded-xl bg-gradient-to-r from-digital-primary to-digital-secondary p-2 hover:shadow-glow transition-all duration-300" aria-label="user-icon" onclick="salla.event.dispatch('login::open')">
                            <i class="header-btn__icon sicon-user-circle text-white group-hover:scale-110 transition-transform duration-300"></i>
                          </button>
                      {% endif %}
                      <salla-cart-summary class="ml-4 rtl:ml-[unset] rtl:mr-4 cart-modern">
                        <i slot="icon" class="header-btn__icon icon sicon-shopping-bag text-digital-primary hover:text-digital-secondary transition-colors duration-300"></i>
                      </salla-cart-summary>
                  </div>
              </div>
          </div>
      </div>
  </div>
</header>
{% if store.scope %}
    <salla-scopes selection="{{ store.scope.display_as == 'popup' ? 'mandatory' : 'optional' }}"></salla-scopes>
{% endif %}
