<footer class="store-footer relative overflow-hidden">
	<div class="absolute inset-0 bg-gradient-to-br from-digital-dark via-darker to-digital-primary/20 opacity-95"></div>
	<div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-30"></div>
	<div aria-label="footer" class="store-footer__inner relative z-10">
		<div class="container grid grid-col-1 lg:grid-cols-6 gap-8 lg:gap-6">
			<div class="lg:col-span-2 rtl:lg:pl-20 ltr:lg:pr-20">
				<a href="{{ link('/') }}" class="flex items-center m-0 mb-4 group">
					<h3 class="text-white text-2xl font-bold bg-gradient-to-r from-digital-accent to-digital-secondary bg-clip-text text-transparent group-hover:from-digital-secondary group-hover:to-digital-accent transition-all duration-300">{{store.name}}</h3>
				</a>
				{% if store.description %}
					<div class="max-w-sm leading-7 mb-6 text-gray-300">
						{{ store.description|raw }}
          </div>
				{% endif %}

				<div class="hidden lg:block">
					<salla-social class="block mb-6"></salla-social>
				</div>

          {# vat #}
          {% if store.settings.tax.number %}
            <div class="flex rtl:space-x-reverse space-x-2 items-end">
              {% if store.settings.tax.certificate %}
                <a class="load-img-onclick" data-modal-id="modal-value-tax" href="#/" alt="{{ store.settings.tax.number }}">
                  <img width="100%" height="100%" src="{{ 'images/s-empty.png' | cdn }}" data-src="{{'images/tax.png' | cdn(70,70)}}" class="lazy w-10 rounded-sm hover:opacity-80 transition-opacity" alt="value added tax">
                </a>
              {% endif %}
              <div>
                <p class="text-sm text-text-grey mb-1">{{ trans('common.elements.tax_number') }}</p>
                <b class="text-sm">{{ store.settings.tax.number }}</b>
              </div>
            </div>

            {% if store.settings.tax.certificate %}
              <salla-modal sub-title-first sub-title="{{ trans('common.elements.tax_number') }}" modal-title="{{ store.settings.tax.number }}" id="modal-value-tax">
                <div class="flex justify-center max-w-full">
                  <img class="w-full" loading="lazy" 
                  src="{{ 'images/s-empty.png' | cdn }}" 
                  data-src="{{ store.settings.tax.certificate }}" 
                  alt="{{ store.settings.tax.number }}"/>
                </div>
              </salla-modal>
            {% endif %}
          {% endif %}
        </div>

			<div class="footer-links-section">
				<h3 class="text-white font-bold text-lg mb-4 border-b-2 border-digital-accent inline-block pb-2">{{ trans('blocks.footer.pages_links') }}</h3>
				<salla-menu source="footer" class="footer-menu-modern"></salla-menu>
			</div>

			<div class="footer-contact-section">
				<salla-contacts class="text-gray-300"></salla-contacts>

				<div class="lg:hidden contact-social mt-6">
					<salla-social></salla-social>
				</div>
			</div>

			<salla-apps-icons class="lg:col-span-2 rtl:lg:pr-20 ltr:lg:pl-20 apps-modern"></salla-apps-icons>

		</div>
	</div>

	<div class="relative z-10 border-t border-white/10 bg-darker/50 backdrop-blur-sm">
		<div class="md:flex items-center justify-between py-6 container text-center">
			<span class="text-sm text-gray-400 copyright-text">{% hook copyright %}</span>
			<salla-payments class="payments-modern"></salla-payments>
		</div>
	</div>
</div>

<span class="hidden bottom-2 rtl:pl-24 ltr:pr-24 md:grid-cols-3 opacity-40"></span></footer>
